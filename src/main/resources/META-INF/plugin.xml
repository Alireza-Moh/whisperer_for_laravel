<idea-plugin>
    <id>at.alirezamoh.idea_whisperer_for_laravel</id>

    <name>Whisperer For Laravel</name>

    <vendor email="" url="https://github.com/Alireza-Moh/whisperer_for_laravel">Whisperer For Laravel</vendor>

    <description>
        <![CDATA[
        Whisperer For Laravel is a PhpStorm plugin for Laravel applications. this plugin helps you work faster when developing Laravel applications in PhpStorm.

        <h3>Features:</h3>
        <ul>
            <li>Code Generation Templates</li>
            <li>Completions for: Route, validation, request fields, gates, config, views and a lot more</li>
            <li>Blade components support</li>
            <li>Laravel packages support: InertiaJs</li>
        </ul>

        <h3>Contributions:</h3>
        <p>Contributions are always welcome! If you encounter any issues, feel free to open an issue on the <a href="https://github.com/Alireza-Moh/whisperer_for_laravel">GitHub Issues page</a>. If you want to contribute to the project, do not hesitate</p>
        ]]>
    </description>

    <change-notes>
        <![CDATA[
            <ul>
                <li>Adds support for accessing request fields via a new request methods [input(), string(), integer(), boolean(), float()]</li>
                <li>Improves support for additional form request field access patterns</li>
                <li>Searches for table names in models</li>
                <li>Fixes some bugs</li>
            </ul>
        ]]>
    </change-notes>



    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php.blade</depends>

    <version>1.1.5</version>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="NotificationGroup" displayType="BALLOON"/>

        <postStartupActivity implementation="at.alirezamoh.whisperer_for_laravel.settings.LaravelStartupActivity"/>

        <fileBasedIndex implementation="at.alirezamoh.whisperer_for_laravel.indexes.RouteIndex"/>
        <fileBasedIndex implementation="at.alirezamoh.whisperer_for_laravel.indexes.TableIndex"/>
        <fileBasedIndex implementation="at.alirezamoh.whisperer_for_laravel.indexes.ConfigIndex"/>
        <fileBasedIndex implementation="at.alirezamoh.whisperer_for_laravel.indexes.ServiceProviderIndex"/>

        <projectConfigurable parentId="language" instance="at.alirezamoh.whisperer_for_laravel.settings.SettingConfigurable" id="whisperer_for_laravel_settings" displayName="Whisperer For Laravel" nonDefaultProject="true"/>
        <projectService serviceImplementation="at.alirezamoh.whisperer_for_laravel.settings.SettingsState"/>

        <statusBarWidgetFactory implementation="at.alirezamoh.whisperer_for_laravel.statusBar.LaravelVersion" id="LaravelVersion" order="first" />

        <psi.referenceContributor language="PHP" implementation="at.alirezamoh.whisperer_for_laravel.config.ConfigReferenceContributor"/>
        <psi.referenceContributor language="PHP" implementation="at.alirezamoh.whisperer_for_laravel.blade.viewName.BladeReferenceContributor"/>
        <psi.referenceContributor language="PHP" implementation="at.alirezamoh.whisperer_for_laravel.routing.routeName.RouteReferenceContributor"/>
        <psi.referenceContributor language="PHP" implementation="at.alirezamoh.whisperer_for_laravel.gate.GateReferenceContributor"/>
        <psi.referenceContributor language="PHP" implementation="at.alirezamoh.whisperer_for_laravel.packages.inertia.InertiaReferenceContributor"/>
        <psi.referenceContributor language="PHP" implementation="at.alirezamoh.whisperer_for_laravel.eloquent.table.TableReferenceContributor"/>
        <psi.referenceContributor language="PHP" implementation="at.alirezamoh.whisperer_for_laravel.routing.middleware.MiddlewareReferenceContributor"/>
        <psi.referenceContributor language="PHP" implementation="at.alirezamoh.whisperer_for_laravel.routing.routeAction.RouteActionReferenceContributor"/>
        <psi.referenceContributor language="PHP" implementation="at.alirezamoh.whisperer_for_laravel.routing.resourceRoute.ResourceRouteReferenceContributor"/>

        <completion.contributor language="PHP" implementationClass="at.alirezamoh.whisperer_for_laravel.request.validation.RuleValidationCompletionContributor"/>
        <completion.contributor language="XML" implementationClass="at.alirezamoh.whisperer_for_laravel.blade.component.BladeXComponentCompletionContributor"/>
        <completion.contributor language="PHP" implementationClass="at.alirezamoh.whisperer_for_laravel.request.requestField.RequestFieldCompletionContributor"/>
        <completion.contributor language="PHP" implementationClass="at.alirezamoh.whisperer_for_laravel.routing.namespace.RouteNamespaceCompletionContributor"/>

        <gotoDeclarationHandler implementation="at.alirezamoh.whisperer_for_laravel.blade.component.BladeXComponentGotoDeclarationHandler"/>
        <gotoDeclarationHandler implementation="at.alirezamoh.whisperer_for_laravel.request.validation.RuleValidationGotoDeclarationHandler"/>
        <gotoDeclarationHandler implementation="at.alirezamoh.whisperer_for_laravel.request.requestField.RequestFieldGotoDeclarationHandler"/>

        <codeInsight.template.postfixTemplateProvider language="PHP" implementationClass="at.alirezamoh.whisperer_for_laravel.postfixes.dd.DDPostfixProvider" />

        <errorHandler implementation="com.intellij.diagnostic.JetBrainsMarketplaceErrorReportSubmitter"/>

        <lang.inspectionSuppressor language="PHP" implementationClass="at.alirezamoh.whisperer_for_laravel.request.requestField.RequestFieldSuppressor"/>
    </extensions>

    <actions>
        <group id="at.alirezamoh.whisperer_for_laravel.Actions" class="at.alirezamoh.whisperer_for_laravel.actions.StartPluginAction" text="Whisperer For Laravel" popup="true" description="The start point of the plugin">
            <add-to-group group-id="MainMenu" anchor="last"/>

            <action id="at.alirezamoh.whisperer_for_laravel.ActionChooserAction" class="at.alirezamoh.whisperer_for_laravel.actions.ActionChooserAction" text="Search For Code Creation Templates" icon="/icons/laravelIcon.svg">
            </action>

            <action id="at.alirezamoh.whisperer_for_laravel.GenerateHelperMethodsAction" class="at.alirezamoh.whisperer_for_laravel.actions.GenerateHelperMethodsAction" text="Create Helper Methods" icon="/icons/laravelIcon.svg">
            </action>

            <group id="at.alirezamoh.whisperer_for_laravel.AllCodeGenerationActionsGroupAction" popup="true" icon="/icons/laravelIcon.svg" text="All Available Code Creation Templates">
                <action id="at.alirezamoh.whisperer_for_laravel.EloquentAction" class="at.alirezamoh.whisperer_for_laravel.actions.EloquentAction" text="Create Eloquent Model From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.MigrationAction" class="at.alirezamoh.whisperer_for_laravel.actions.MigrationAction" text="Create Migration From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.ControllerAction" class="at.alirezamoh.whisperer_for_laravel.actions.ControllerAction" text="Create Controller From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.DBSeederAction" class="at.alirezamoh.whisperer_for_laravel.actions.DBSeederAction" text="Create Database Seeder From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.ConfigAction" class="at.alirezamoh.whisperer_for_laravel.actions.ConfigAction" text="Create Config File From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.BladeComponentAction" class="at.alirezamoh.whisperer_for_laravel.actions.BladeComponentAction" text="Create Blade Component From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.ConsoleAction" class="at.alirezamoh.whisperer_for_laravel.actions.ConsoleAction" text="Create Console Command From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.ViewAction" class="at.alirezamoh.whisperer_for_laravel.actions.ViewAction" text="Create View File From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.JobAction" class="at.alirezamoh.whisperer_for_laravel.actions.JobAction" text="Create Job From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.ValidationRuleAction" class="at.alirezamoh.whisperer_for_laravel.actions.ValidationRuleAction" text="Create Validation Rule" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.PolicyAction" class="at.alirezamoh.whisperer_for_laravel.actions.PolicyAction" text="Create Policy From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.ObserverAction" class="at.alirezamoh.whisperer_for_laravel.actions.ObserverAction" text="Create Observer From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.MailableAction" class="at.alirezamoh.whisperer_for_laravel.actions.MailableAction" text="Create Mailable From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.ExceptionAction" class="at.alirezamoh.whisperer_for_laravel.actions.ExceptionAction" text="Create Exception From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.EventListenerAction" class="at.alirezamoh.whisperer_for_laravel.actions.EventListenerAction" text="Create Event Listener From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.MiddlewareAction" class="at.alirezamoh.whisperer_for_laravel.actions.MiddlewareAction" text="Create Middleware From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.JsonResourceAction" class="at.alirezamoh.whisperer_for_laravel.actions.JsonResourceAction" text="Create Json Resource From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.JsonResourceCollectionAction" class="at.alirezamoh.whisperer_for_laravel.actions.JsonResourceCollectionAction" text="Create Json Resource Collection From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.FormRequestAction" class="at.alirezamoh.whisperer_for_laravel.actions.FormRequestAction" text="Create Form Request From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.EloquentScopeAction" class="at.alirezamoh.whisperer_for_laravel.actions.EloquentScopeAction" text="Create Eloquent Scope From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.EloquentCastAction" class="at.alirezamoh.whisperer_for_laravel.actions.EloquentCastAction" text="Create Eloquent Cast From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.BroadcastingChannelAction" class="at.alirezamoh.whisperer_for_laravel.actions.BroadcastingChannelAction" text="Create Broadcasting Channel From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.DbFactoryAction" class="at.alirezamoh.whisperer_for_laravel.actions.DbFactoryAction" text="Create Database Factory From Template" icon="/icons/laravelIcon.svg">
                </action>

                <action id="at.alirezamoh.whisperer_for_laravel.ViewComposerAction" class="at.alirezamoh.whisperer_for_laravel.actions.ViewComposerAction" text="Create View Composer From Template" icon="/icons/laravelIcon.svg">
                </action>
            </group>

            <separator />

            <action id="at.alirezamoh.whisperer_for_laravel.WhispererForLaravelSettingsNavigationAction" class="at.alirezamoh.whisperer_for_laravel.actions.WhispererForLaravelSettingsNavigationAction" text="Whisper For Laravel Settings" icon="/icons/laravelIcon.svg">
            </action>
        </group>
    </actions>
</idea-plugin>